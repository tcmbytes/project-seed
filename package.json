{
  "name": "project-seed",
  "version": "0.1.0",
  "description": "Project Seed package",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexcristea/api-seed.git"
  },
  "scripts": {
    ":clean": "rm -rf .build",
    ":build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    ":start": "node .build/index.js",
    "build": "run-s :clean :build",
    "check:all": "run-s check:type check:prettier check:lint",
    "check:dpdm": "dpdm ./src/* --tsconfig ./tsconfig.json --exclude ./node_modules --warning false",
    "check:lint": "eslint './**/**.{js,ts}'",
    "check:prettier": "prettier --check './**/**.{js,ts}'",
    "check:type": "tsc --pretty",
    "dev": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./src/index.ts",
    "dev:watch": "nodemon",
    "start": "run-s :clean :build :start",
    "test": "jest src",
    "test:coverage": "jest src --coverage",
    "test:watch": "jest src --watchAll",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.5",
    "@types/npm": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "dpdm": "^3.12.0",
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jest-html-reporters": "^3.1.3",
    "jest-junit": "^15.0.0",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^3.14.2",
    "typescript": "^4.9.5",
    "yarn-upgrade-all": "^0.7.2"
  },
  "dependencies": {
    "dotenv": "^16.0.3"
  }
}